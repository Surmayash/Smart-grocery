<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>smart grocery</display-name>
  <!-- Listener for scheduled expiry notifier -->
    <listener>
        <listener-class>grocery.ExpiryNotifierListener</listener-class>
    </listener>

    <!-- Servlets -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>grocery.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>grocery.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>grocery.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GroceryServlet</servlet-name>
        <servlet-class>grocery.GroceryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroceryServlet</servlet-name>
        <url-pattern>/grocery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditGroceryServlet</servlet-name>
        <servlet-class>grocery.EditGroceryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditGroceryServlet</servlet-name>
        <url-pattern>/edit-grocery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteGroceryServlet</servlet-name>
        <servlet-class>grocery.DeleteGroceryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteGroceryServlet</servlet-name>
        <url-pattern>/delete-grocery</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>